{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "newLine": "LF",
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "pretty": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "./node_modules/xstream/index.d.ts"
  ],
  "exclude": [
    // "node_modules",
    "**/*.spec.ts"
  ]
}